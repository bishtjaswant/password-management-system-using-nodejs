<%- include('../partials/header'); -%>
<%- include('../partials/nav'); -%>

    <div class="container">
        <div class="row">
          <div class="col-md-8 offset-md-2">

            
      <% if ( error != '' ) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <strong>info!</strong> <%= error %>            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <% } %>

            <div class="card my-5">
              <div class="card-header text-capitalize">
                <h1>add new password</h1>
              </div>
              <div class="card-body">
                <form action="/password/save-password" method="post">
            
                  <div class="row">
                    <div class="my-2 col-md-4">
                      <strong>Password category</strong>
                    </div>

                    <div class="col-md-8">
                      <select class="form-select" name="type" aria-label="Default select example">
                        <option selected>choose password category</option>
                       
              <% result.forEach(function(category){ %>
                        <option value="<%= category.type %>"><%= category.type %></option>
                  <% })  %>

                      </select>
                    
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-4 my-2">
                      <strong>Description</strong>
                    </div>
                    <div class="col-md-8">
                       <textarea name="description" class="my-2 form-control" id="editor" style="height: 250px;"  cols="5" placeholder="write short description about password" rows="5"></textarea>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-4"> </div>
                    <div class="col-md-8">
                      <input type="submit"  value="save passsword" class="btn btn-success my-3">
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
    </div>
  
    <%- include('../partials/footer.ejs'); -%>
